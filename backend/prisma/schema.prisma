generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String       @id
  title       String
  startYear   Int
  description String
  image       String
  trailer     String
  genres      MovieGenre[] // Relaci贸n con MovieGenre
  country     String
  language    String
}

model TvShow {
  id          String        @id
  title       String
  startYear   Int
  description String
  image       String
  trailer     String
  genres      TvShowGenre[] // Relaci贸n con TvShowGenre
  country     String
  language    String
}

model Genre {
  id      String        @id
  name    String
  movies  MovieGenre[] // Relaci贸n inversa con MovieGenre
  tvShows TvShowGenre[] // Relaci贸n inversa con TvShowGenre
}

model MovieGenre {
  id String @id @default(cuid())
  movieId String
  genreId String
  movie   Movie  @relation(fields: [movieId], references: [id])
  genre   Genre  @relation(fields: [genreId], references: [id])
}

model TvShowGenre {
  id        String  @id @default(cuid())
  tvShowId  String
  genreId   String
  tvShow    TvShow  @relation(fields: [tvShowId], references: [id])
  genre     Genre   @relation(fields: [genreId], references: [id])
}

